{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Cedge Summary Generator",
  "action": {
    "default_popup": "js/index.html",
    "default_title": "Xavier",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png",
      "128": "icons/128.png",
      "256": "icons/256.png",
      "512": "icons/512.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "side_panel": {
    "default_path": "js/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["sidePanel", "tabs", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/jobs/*"]
}
